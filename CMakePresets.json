{
  "version": 3,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 21,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "linux-arm64-debug",
      "displayName": "Linux ARM64 Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BISON_EXECUTABLE": "/usr/bin/bison",
        "FLEX_EXECUTABLE": "/usr/bin/flex",
        "LLVM_CONFIG_EXECUTABLE": "/usr/bin/llvm-config"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-arm64-release",
      "displayName": "Linux ARM64 Release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BISON_EXECUTABLE": "/usr/bin/bison",
        "FLEX_EXECUTABLE": "/usr/bin/flex",
        "LLVM_CONFIG_EXECUTABLE": "/usr/bin/llvm-config",
        "HEBE_ENABLE_LTO": "ON",
        "HEBE_ENABLE_STRIP": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "macos-arm64-debug",
      "displayName": "macOS ARM64 Debug",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BISON_EXECUTABLE": "$env{HOME}/Desktop/bison3/bin/bison",
        "FLEX_EXECUTABLE": "$env{HOME}/Desktop/flex/bin/flex",
        "LLVM_CONFIG_EXECUTABLE": "/opt/homebrew/opt/llvm/bin/llvm-config",
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
        "CMAKE_EXE_LINKER_FLAGS": "-L/opt/homebrew/opt/llvm/lib/c++ -Wl,-rpath,/opt/homebrew/opt/llvm/lib/c++",
        "CMAKE_OSX_ARCHITECTURES": "arm64"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "macos-arm64-release",
      "displayName": "macOS ARM64 Release",
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "BISON_EXECUTABLE": "$env{HOME}/Desktop/bison3/bin/bison",
        "FLEX_EXECUTABLE": "$env{HOME}/Desktop/flex/bin/flex",
        "LLVM_CONFIG_EXECUTABLE": "/opt/homebrew/opt/llvm/bin/llvm-config",
        "CMAKE_C_COMPILER": "/opt/homebrew/opt/llvm/bin/clang",
        "CMAKE_CXX_COMPILER": "/opt/homebrew/opt/llvm/bin/clang++",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_EXE_LINKER_FLAGS": "-L/opt/homebrew/opt/llvm/lib/c++ -Wl,-rpath,/opt/homebrew/opt/llvm/lib/c++",
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "HEBE_ENABLE_LTO": "ON",
        "HEBE_ENABLE_STRIP": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Darwin"
      }
    },
    {
      "name": "windows-arm64-debug",
      "displayName": "Windows ARM64 Debug",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
	      "CMAKE_C_COMPILER": "C:/msys64/clangarm64/bin/clang.exe",
	      "CMAKE_CXX_COMPILER": "C:/msys64/clangarm64/bin/clang++.exe",
    	  "LLVM_CONFIG_EXECUTABLE": "C:/opt/llvm-14.0.6-arm64/bin/llvm-config.exe",
	      "BISON_EXECUTABLE": "C:/msys64/usr/bin/bison.exe",
    	  "FLEX_EXECUTABLE": "C:/msys64/usr/bin/flex.exe",
	      "CMAKE_MAKE_PROGRAM": "C:/msys64/clangarm64/bin/ninja.exe",
	      "HEBE_ENABLE_LTO": "OFF",
    	  "HEBE_ENABLE_STRIP": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows-arm64-release",
      "displayName": "Windows ARM64 Release",
      "inherits": "base",
      "generator": "Ninja",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
	      "CMAKE_C_COMPILER": "C:/msys64/clangarm64/bin/clang.exe",
	      "CMAKE_CXX_COMPILER": "C:/msys64/clangarm64/bin/clang++.exe",
    	  "LLVM_CONFIG_EXECUTABLE": "C:/opt/llvm-14.0.6-arm64/bin/llvm-config.exe",
	      "BISON_EXECUTABLE": "C:/msys64/usr/bin/bison.exe",
    	  "FLEX_EXECUTABLE": "C:/msys64/usr/bin/flex.exe",
	      "CMAKE_MAKE_PROGRAM": "C:/msys64/clangarm64/bin/ninja.exe",
        "HEBE_ENABLE_LTO": "ON",
        "HEBE_ENABLE_STRIP": "OFF"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "linux-arm64-debug",
      "configurePreset": "linux-arm64-debug"
    },
    {
      "name": "linux-arm64-release",
      "configurePreset": "linux-arm64-release"
    },
    {
      "name": "macos-arm64-debug",
      "configurePreset": "macos-arm64-debug"
    },
    {
      "name": "macos-arm64-release",
      "configurePreset": "macos-arm64-release"
    },
    {
      "name": "windows-arm64-debug",
      "configurePreset": "windows-arm64-debug",
      "configuration": "Debug"
    },
    {
      "name": "windows-arm64-release",
      "configurePreset": "windows-arm64-release",
      "configuration": "Release"
    }
  ]
}